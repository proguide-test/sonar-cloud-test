{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true   
  },
  "include": ["src"],
  "exclude": ["node_modules", "build/**/*"] 
}